{%c=TRUE -edgepriority 1 -shape high}}
mmap new  -reuse -name {Example Map} -radix %x -contents {{%b=11???? -bgcolor orange -label REG:%x -linecolor yellow -shape bus}
{%x=1F -bgcolor red -label ERROR -linecolor white -shape EVENT}
{%x=2C -bgcolor red -label ERROR -linecolor white -shape EVENT}
{%x=* -label %x -linecolor gray -shape bus}}
mmap new  -reuse -name signal_colors -radix %x -contents {{%b=0 -bgcolor #999999 -bgstipple maxim_xhatch -font -*-courier-bold-r-normal--12-* -linecolor #999999 -shape x}
{%b=001 -bgcolor #ffff00 -font -*-courier-medium-r-normal--12-* -shape bus -textcolor #000000}
{%b=010 -bgcolor #ff0000 -font -*-courier-medium-r-normal--12-* -shape bus -textcolor #000000}
