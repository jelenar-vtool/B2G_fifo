{%b=1 -bgcolor #ff0000 -font -*-courier-bold-r-normal--12-* -icon redLight -shape bus -textcolor #000000}}
mmap new  -reuse -name yellow_signal -radix %x -contents {{%x=0 -bgcolor #999999 -bgstipple maxim_xhatch -font -*-courier-medium-r-normal--12-* -shape bus}
{%x=1 -bgcolor #ffff00 -font -*-courier-bold-r-normal--12-* -icon yellowLight -shape bus -textcolor #000000}}
mmap new  -reuse -name green_signal -radix %x -contents {{%x=0 -bgcolor #999999 -bgstipple maxim_xhatch -font -*-courier-medium-r-normal--12-* -shape bus}
{%x=1 -bgcolor #99ff00 -font -*-courier-bold-r-normal--12-* -icon greenLight -shape bus -textcolor #000000}}
mmap new  -reuse -name day_state -radix %x -contents {{%x=0 -bgcolor #ffffff -bgstipple gray25 -font -*-courier-bold-r-normal--12-* -label DAYTIME -shape x -textcolor #ffffff}
{%x=1 -bgcolor #000000 -bgstipple gray25 -font -*-courier-bold-r-normal--12-* -label NIGHTTIME -shape x}}
mmap new  -reuse -name {New map #2} -radix %x -contents {{%b=11???? -bgcolor orange -label REG:%x -linecolor yellow -shape bus}
{%x=1F -bgcolor red -label ERROR -linecolor white -shape EVENT}
{%x=2C -bgcolor red -label ERROR -linecolor white -shape EVENT}
{%x=* -label %x -linecolor gray -shape bus}}

#
# Waveform windows
#
if {[catch {window new WaveWindow -name "Waveform 1" -geometry 2556x1276+0+25}] != ""} {
    window geometry "Waveform 1" 2556x1276+0+25
}
window target "Waveform 1" on
waveform using {Waveform 1}
waveform sidebar select designbrowser
waveform set \
    -primarycursor TimeA \
    -signalnames name \
    -signalwidth 175 \
    -units fs \
    -valuewidth 75
waveform baseline set -time 0

set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.clk}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.rst_n}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.broken}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.r_l}]}
	} ]]
waveform format $id -radix red_signal
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.y_l}]}
	} ]]
waveform format $id -radix yellow_signal
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.g_l}]}
	} ]]
waveform format $id -radix green_signal
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.Q}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.nextQ}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.QQ[1:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.nextQQ[1:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.time_of_day}]}
	} ]]
waveform format $id -radix day_state
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.day_switch}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.day_switch_cnt[8:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.day_switch_cnt_th[8:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.lights_state[1:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.lights_switch}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.lights_switch_cnt[5:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.lights_switch_cnt_th[5:0]}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.dut_sva.a_go_stop}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.dut_sva.a_stop_go}]}
	} ]]
set id [waveform add -signals [subst  {
	{[format {traffic_lights_tb.dut.dut_sva.a_yellow_blink}]}
	} ]]
waveform hierarchy collapse $id

waveform xview limits 0 20000000000fs
waveform delta load {-item baseline -value 0} {-item {cursor baseline} -value 0} {-item {cursor baseline} -value 0}

